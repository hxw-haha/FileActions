<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#7E7E7D</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--自动换行的LinearLayout !-->
    <declare-styleable name="WarpLinearLayout">
        <attr name="gravity" format="enum"><!--对齐方式 !-->
            <enum name="right" value="0" />
            <enum name="left" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="horizontal_Space" format="dimension" />
        <attr name="vertical_Space" format="dimension" />
        <attr name="isFull" format="boolean" />
    </declare-styleable>

    <!-- 柱状图 -->
    <declare-styleable name="BarView">
        <attr name="bar_item_width" format="dimension" />
        <!-- 顶部文字的大小 -->
        <attr name="bar_t_text_size" format="dimension" />
        <!-- 顶部文字的颜色 -->
        <attr name="bar_t_text_color" format="color" />
        <!-- 底部文字的大小 -->
        <attr name="bar_b_text_size" format="dimension" />
        <!-- 底部文字的颜色 -->
        <attr name="bar_b_text_color" format="color" />
        <!-- 绘制x轴线条的颜色 -->
        <attr name="bar_line_color" format="color" />
    </declare-styleable>
    <!-- 饼图-线性 -->
    <declare-styleable name="PieLinearView">
        <!-- 饼图高度 -->
        <attr name="pie_l_height" format="dimension" />
        <!-- 标题字体大小 -->
        <attr name="pie_l_title_size" format="dimension" />
        <!-- 标题字体颜色 -->
        <attr name="pie_l_title_color" format="color" />
        <!-- 饼图占比字体大小 -->
        <attr name="pie_l_scale_size" format="dimension" />
        <!-- 饼图占比字体大小 -->
        <attr name="pie_l_scale_color" format="color" />
    </declare-styleable>
    <!-- 饼图-自动换行 -->
    <declare-styleable name="PieWarpLinearView">
        <!-- 饼图高度 -->
        <attr name="pie_wl_height" format="dimension" />
        <!-- 标题字体大小 -->
        <attr name="pie_wl_title_size" format="dimension" />
        <!-- 标题字体颜色 -->
        <attr name="pie_wl_title_color" format="color" />
        <attr name="pie_wl_gravity" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="pie_wl_horizontal_space" format="dimension" />
        <attr name="pie_wl_vertical_space" format="dimension" />
    </declare-styleable>
</resources>